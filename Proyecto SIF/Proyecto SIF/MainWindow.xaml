        <Button x:Name="btn_cerrar" VerticalAlignment="Top" Margin="0,0,-0.4,0" Height="50" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="#FF434343" HorizontalAlignment="Right" Width="50" Click="btn_cerrar_Click" Grid.Column="1">
