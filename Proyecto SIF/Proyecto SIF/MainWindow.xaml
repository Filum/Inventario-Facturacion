        </Button>

        <Button x:Name="btn_minimizar" VerticalAlignment="Top" Margin="0,0,99.6,0" Height="50" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="#FF434343" HorizontalAlignment="Right" Width="50" Click="btn_minimizar_Click" Grid.Column="1">
            <Image x:Name="img_minimizar" Source="C:\Users\Usuario\Source\Repos\Inventario-Facturacion\Proyecto SIF\Proyecto SIF\imagenes\minimizar.png" Stretch="None" Height="50" Width="50"/>
